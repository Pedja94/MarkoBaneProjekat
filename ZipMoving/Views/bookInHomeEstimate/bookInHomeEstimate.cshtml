    <aside class="bg-dark" id="wheredowemove" style="background-color:gray;">
        <div class="container text-center">
            <div class="call-to-action">
                <br><br>
                <h2>Book In Home Estimate</h2>
                <!-- MESTO ZA MAPU -->
                <hr><br><br>
                <div class="col-md-12">

                    <div id="my-calendar" style="color:black;"></div>

                </div>

                <script type="application/javascript">

                    // INICIJALIZACIJA KALENDARA
                        $(document).ready(function () {
                            $("#my-calendar").zabuto_calendar({language: "en",cell_border: true,
                          today: true,
                          show_days: true,
                          weekstartson: 0,
                          data: eventData,
                          action: function () {
                                    return myDateFunction(this.id, false);
                                }
                          });
                        });

                    // eventData je niz datuma (u njega ubacamo datume koji su zauzeti)
                    // plava boja je trenutni datum, crvena boja je zauzeti datum (moze da se menja ako ne odgovara)
                    var eventData = [
                        {"date":"2017-06-06","badge":true,},
                        {"date":"2017-06-07","badge":true,}
                    ];
                </script>



                <script>
                    // OVA FUNKCIJA PRIKAZUJE NA KOJI JE DATUM KLIKNUTO
                    function myDateFunction(id, fromModal) {

                        $("#date-popover").hide("slow");
                        $("#timeofday").hide("slow");


                        if (fromModal) {
                            $("#" + id + "_modal").modal("hide");
                        }
                        var date = $("#" + id).data("date");
                        var hasEvent = $("#" + id).data("hasEvent");
                        if (hasEvent && !fromModal) {
                            return false;
                        }

                        $("#date-popover-content").html('Selected Pick Up Date: ' + date + "<hr>");
                        $("#timeofday").html('<div class="col-md-4 col-sm-4"> <div class="radio"> <label><input type="radio" name="optradio"> Morning </label> </div> </div>'
                            + ' <div class="col-md-4 col-sm-4"> <div class="radio"> <label><input type="radio" name="optradio"> Before Noon </label> </div> </div> '
                            + ' <div class="col-md-4 col-sm-4"> <div class="radio"> <label><input type="radio" name="optradio"> Afternoon </label> </div> </div>');


                        $("#date-popover").slideDown("slow");
                        $("#timeofday").slideDown("fast");
                        return true;
                    }
                </script>

            </div>

            <div class="col-md-12 text-center">
                <div id="date-popover" style="color:white;font-size:medium; font-weight:500; margin-top:10px; margin-bottom:5px; display:none;">
                    <div id="date-popover-content" class="popover-content"></div>
                </div>
                <div id="timeofday" style="color:white; font-weight:500;font-size:medium;display:none;"></div>

