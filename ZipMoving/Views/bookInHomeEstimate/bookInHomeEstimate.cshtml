    <![endif]-->

</head>

<body id="page-top" style="font-family:'Open Sans','Helvetica Neue',Arial,sans-serif;">














    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top" style="height:70px;">
        <div class="container-fluid" style="height:70px;">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header" style="padding-top:10px;">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top" style="font-size:large;">ZIP Moving</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style="padding-top:10px;">
                <ul class="nav navbar-nav navbar-right">

                    <li>
                        <a class="page-scroll" href="@Url.Action("Index", "Index")" style="font-size:medium;"><span class="glyphicon glyphicon-arrow-left"></span> &nbsp Home</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>


    <form method="post" action="@Url.Action("SubmitEverything", "bookInHomeEstimate")">

        <aside class="bg-dark" id="wheredowemove" style="background-color:gray;">
            <div class="container text-center">
                <div class="call-to-action">
                    <br><br>
                    <h2>Book In Home Estimate</h2>
                    <!-- MESTO ZA MAPU -->
                    <hr><br><br>
                    <div class="col-md-12">

                        <div id="my-calendar" style="color:black;"></div>

                    </div>

                </div>

                <div class="col-md-12 text-center">
                    <div id="date-popover" style="color:white;font-size:medium; font-weight:500; margin-top:10px; margin-bottom:5px; display:none">
                        <div id="date-popover-content" class="popover-content">
                        </div>
                    </div>
                    <div id="timeofday" style="color:white; font-weight:500;font-size:medium;display:none;"></div>


                </div>
            </div>


        </aside>

        <section id="bookinhomeform">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2 text-center">
                        <h2 class="section-heading">Enter Your Information & Submit:</h2>
                        <hr class="primary">
                    </div>


                    <div class="row text-center" style="font-family:'Open Sans','Helvetica Neue',Arial,sans-serif;">
                        <div class="col-md-6 col-md-offset-3">
                            <div>
                                <div class="form-group">
                                    <label for="text">Full Name:</label>
                                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @id = "fullname", @name = "fullname", @placeholder = "Full name", })
                                    @*<input type="text" class="form-control" id="email" placeholder="Full Name">*@
                                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })

                                
                                </div>

                                <div class="form-group">
                                    <label for="email">E-mail Address / Phone Number:</label>
                                    @*<input type="email" class="form-control" id="email" placeholder="E-mail Address / Phone Number">*@
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email", @name = "email", @placeholder = "E-mail Address / Phone Number", })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="text">Pickup Address:</label>
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @id = "address", @name = "address", @placeholder = "Pickup Address", })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    @*<input type="text" class="form-control" id="address" placeholder="Pickup Address">*@
                                </div>
                                <div class="form-group">
                                    <label for="text">Delivery ZIP Code:</label>
                                    @Html.TextBoxFor(m => m.ZIPCode, new { @class = "form-control", @id = "zipCode", @name = "zipCode", @placeholder = "Delivery ZIP Code", })
                                    @Html.ValidationMessageFor(model => model.ZIPCode, "", new { @class = "text-danger" })
                                    @*<input type="text" class="form-control" id="zip" placeholder="Delivery ZIP Code">*@
                                </div>


                                <div id="hidden">
                                    @Html.ValidationMessageFor(model => model.estimateDate, "", new { @class = "text-danger" })
                                </div>




 



                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>

                        </div>
                    </div>




                </div>
            </div>
        </section>

    </form>



        <!-- Bootstrap Core JavaScript -->
        <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>

        <!-- Plugin JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
        <script src="~/Content/vendor/scrollreveal/scrollreveal.min.js"></script>
        <script src="~/Content/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

        <!-- Theme JavaScript -->
        <script src="~/Scripts/creative.min.js"></script>

        <!-- Calendar script-->
        <script>
            //Loading dates
            var takenDates = @Html.Raw(Json.Encode(Model.takenDates));
            var partialyTakenDates = @Html.Raw(Json.Encode(Model.partialyTakenDates));
            var morning = @Html.Raw(Json.Encode(Model.partialyTakenDatesMorning));
            var afternoon = @Html.Raw(Json.Encode(Model.partialyTakenDatesAfternoon));
            var lateAfternoon = @Html.Raw(Json.Encode(Model.partialyTakenDatesLateAfternoon));
            var todayDate = @Html.Raw(Json.Encode(Model.today));
        </script>

        <script src="~/Scripts/bookInHomeEstimate.js"></script>

        <script>
            //date validation
            forDate(@Html.Raw(Json.Encode(Model.estimateDate)), @Html.Raw(Json.Encode(Model.estimateTime)));
        </script>

    <input type="radio" name="estimateTime" value="0" checked disabled>

</body>

</html>
